        // Initialize Editor
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🚀 WebMaster Pro Editor נטען...');
            initializeEditor();
            loadWebsitesList();
            setupAutoSave();
            showAlert('🎉 WebMaster Pro AI Editor מוכן לעבודה!', 'success');
