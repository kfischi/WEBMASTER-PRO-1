        // Initialize Editor
        function initializeEditor() {
            console.log('🔧 מאתחל את האדיטור...');
            
            // Check if AI is available
            checkAIConnection();
            
            // Setup iframe communication
            setupIframeListener();
            
            // Setup font size slider
            const fontSizeSlider = document.getElementById('fontSize');
            const fontSizeValue = document.getElementById('fontSizeValue');
            
            fontSizeSlider.addEventListener('input', function() {
                fontSizeValue.textContent = this.value;
            });
        }

        // Load Websites List
        function loadWebsitesList() {
            console.log('📋 טוען רשימת אתרים...');
            
            const selector = document.getElementById('websiteSelector');
            const list = document.getElementById('websitesList');
            
            // Clear existing content
            selector.innerHTML = '<option value="">🎯 בחר אתר לעריכה עם AI</option>';
            list.innerHTML = '';
            
            // Add websites to selector and list
            Object.keys(websites).forEach(websiteId => {
                const website = websites[websiteId];
                
                // Add to selector
                const option = document.createElement('option');
                option.value = websiteId;
                option.textContent = `${website.name} - ${website.category}`;
                selector.appendChild(option);
                
                // Add to list
                const item = document.createElement('div');
                item.className = 'website-item';
                item.onclick = () => loadWebsite(websiteId);
                item.innerHTML = `
                    <div class="website-info">
                        <h4>${website.name}</h4>
                        <p>${website.description}</p>
                        <p>קטגוריה: ${website.category}</p>
                    </div>
                    <div class="website-price">₪${website.price.toLocaleString()}</div>
                `;
                list.appendChild(item);
            });
            
            console.log('✅ רשימת אתרים נטענה בהצלחה!');
        }

        // Load Website
        function loadWebsite(websiteId) {
            if (!websiteId || !websites[websiteId]) {
                showAlert('❌ אתר לא נמצא!', 'error');
                return;
            }
            
            console.log(`🌐 טוען אתר: ${websites[websiteId].name}`);
            showAlert(`🔄 טוען את ${websites[websiteId].name}...`, 'info');
            
            currentWebsite = websiteId;
            const website = websites[websiteId];
            
            // Update UI
            document.getElementById('previewTitle').innerHTML = `
                <i class="fas fa-edit"></i>
                עורך: ${website.name}
            `;
            
            // Update selector
            document.getElementById('websiteSelector').value = websiteId;
            
            // Highlight in list
            document.querySelectorAll('.website-item').forEach(item => {
                item.classList.remove('active');
            });
            event.target.closest('.website-item')?.classList.add('active');
            
            // Load website in iframe
            const frame = document.getElementById('websiteFrame');
            frame.src = website.file;
            
            // Wait for load
            frame.onload = function() {
                console.log('✅ אתר נטען בהצלחה!');
                showAlert(`✅ ${website.name} נטען בהצלחה!`, 'success');
                setupWebsiteEditor();
            };
            
            frame.onerror = function() {
                console.error('❌ שגיאה בטעינת האתר');
                showAlert('❌ שגיאה בטעינת האתר', 'error');
            };
        }

        // Setup Website Editor
        function setupWebsiteEditor() {
            try {
                const frame = document.getElementById('websiteFrame');
                const frameDoc = frame.contentDocument || frame.contentWindow.document;
                
                // Add edit mode to website
                frameDoc.body.classList.add('webmaster-edit-mode');
                
                // Add click handlers to editable elements
                const editableElements = frameDoc.querySelectorAll('[data-editable], h1, h2, h3, h4, h5, h6, p, span, div, a');
                
                editableElements.forEach(element => {
                    element.addEventListener('click', function(e) {
                        e.preventDefault();
                        selectElement(this);
                    });
                    
                    // Add hover effect
                    element.addEventListener('mouseenter', function() {
                        this.style.outline = '2px dashed #8b5cf6';
                    });
                    
                    element.addEventListener('mouseleave', function() {
                        if (this !== selectedElement) {
                            this.style.outline = 'none';
                        }
                    });
                });
                
                console.log(`✅ מצב עריכה הופעל - נמצאו ${editableElements.length} אלמנטים ערוכים`);
                
            } catch (error) {
                console.error('❌ שגיאה בהגדרת עריכה:', error);
                showAlert('⚠️ חלק מהתכונות יכולות להיות מוגבלות', 'warning');
            }
        }

        // Select Element
        function selectElement(element) {
            // Remove previous selection
            if (selectedElement) {
                selectedElement.style.outline = 'none';
            }
            
            // Set new selection
            selectedElement = element;
            element.style.outline = '3px solid #8b5cf6';
            
            // Update properties panel
            updatePropertiesPanel(element);
            
            console.log('🎯 נבחר אלמנט:', element.tagName, element.textContent?.substring(0, 50));
        }

        // Update Properties Panel
        function updatePropertiesPanel(element) {
            const computedStyle = window.getComputedStyle(element);
            
            // Update text input
            document.getElementById('editText').value = element.textContent || '';
            
            // Update colors
            document.getElementById('textColor').value = rgbToHex(computedStyle.color);
            document.getElementById('bgColor').value = rgbToHex(computedStyle.backgroundColor);
            
            // Update font
            document.getElementById('fontFamily').value = computedStyle.fontFamily.split(',')[0].replace(/['"]/g, '');
            const fontSize = parseInt(computedStyle.fontSize);
            document.getElementById('fontSize').value = fontSize;
            document.getElementById('fontSizeValue').textContent = fontSize;
        }

        // Update Functions
        function updateSelectedText() {
            if (!selectedElement) {
                showAlert('❌ אנא בחר אלמנט לעריכה', 'warning');
                return;
            }
            
            const newText = document.getElementById('editText').value;
            selectedElement.textContent = newText;
            showAlert('✅ טקסט עודכן!', 'success');
            markAsModified();
        }

        function updateTextColor() {
            if (!selectedElement) return;
            
            const color = document.getElementById('textColor').value;
            selectedElement.style.color = color;
            showAlert('✅ צבע טקסט עודכן!', 'success');
            markAsModified();
        }

        function updateBackgroundColor() {
            if (!selectedElement) return;
            
            const color = document.getElementById('bgColor').value;
            selectedElement.style.backgroundColor = color;
            showAlert('✅ צבע רקע עודכן!', 'success');
            markAsModified();
        }

        function updatePrimaryColor() {
            const color = document.getElementById('primaryColor').value;
            const frame = document.getElementById('websiteFrame');
            const frameDoc = frame.contentDocument || frame.contentWindow.document;
            
            // Update CSS custom properties
            frameDoc.documentElement.style.setProperty('--primary-color', color);
            
            // Update specific elements
            const primaryElements = frameDoc.querySelectorAll('.btn-primary, .primary-color, .text-primary');
            primaryElements.forEach(el => {
                el.style.backgroundColor = color;
            });
            
            showAlert('✅ צבע עיקרי עודכן!', 'success');
            markAsModified();
        }

        function updateFontFamily() {
            if (!selectedElement) return;
            
            const font = document.getElementById('fontFamily').value;
            selectedElement.style.fontFamily = font;
            showAlert('✅ גופן עודכן!', 'success');
            markAsModified();
        }

        function updateFontSize() {
            if (!selectedElement) return;
            
            const size = document.getElementById('fontSize').value;
            selectedElement.style.fontSize = size + 'px';
            document.getElementById('fontSizeValue').textContent = size;
            showAlert('✅ גודל גופן עודכן!', 'success');
            markAsModified();
        }

        // AI Functions
        function checkAIConnection() {
            // Simulate AI connection check
            setTimeout(() => {
                const status = document.getElementById('aiStatus');
                status.classList.add('connected');
                status.innerHTML = '<i class="fas fa-brain"></i> AI מחובר וזמין';
                console.log('🤖 AI מחובר בהצלחה!');
            }, 1000);
        }

        async function executeAI() {
            if (isAIProcessing) {
                showAlert('⏳ AI עדיין מעבד בקשה קודמת...', 'warning');
                return;
            }
            
            const input = document.getElementById('aiInput').value.trim();
            if (!input) {
                showAlert('❌ אנא הכנס בקשה ל-AI', 'warning');
                return;
            }
            
            isAIProcessing = true;
            const btn = document.getElementById('aiExecuteBtn');
            const originalText = btn.innerHTML;
            
            // Update button
            btn.disabled = true;
            btn.innerHTML = '<div class="spinner"></div> AI מעבד...';
            
            try {
                showAlert('🤖 AI מעבד את הבקשה...', 'info');
                
                // Simulate AI processing
                await new Promise(resolve => setTimeout(resolve, 2000));
                
                // Mock AI response
                const aiResponse = generateMockAIResponse(input);
                
                // Apply AI changes
                await applyAIChanges(aiResponse);
                
                showAlert('✅ AI סיים לעבד את הבקשה!', 'success');
                document.getElementById('aiInput').value = '';
                
            } catch (error) {
                console.error('❌ שגיאת AI:', error);
                showAlert('❌ שגיאה בעיבוד AI', 'error');
            } finally {
                isAIProcessing = false;
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }

        function generateMockAIResponse(input) {
            // Mock AI responses based on input
            const lowerInput = input.toLowerCase();
            
            if (lowerInput.includes('צבע') || lowerInput.includes('color')) {
                return {
                    type: 'color_change',
                    changes: [
                        { element: 'h1', property: 'color', value: '#2563eb' },
                        { element: '.btn', property: 'backgroundColor', value: '#059669' }
                    ]
                };
            } else if (lowerInput.includes('טקסט') || lowerInput.includes('text')) {
                return {
                    type: 'text_improvement',
                    changes: [
                        { element: 'h1', property: 'textContent', value: 'כותרת משופרת עם AI' },
                        { element: 'p', property: 'textContent', value: 'תוכן משופר ומקצועי יותר' }
                    ]
                };
            } else if (lowerInput.includes('סלולר') || lowerInput.includes('mobile')) {
                return {
                    type: 'mobile_optimization',
                    changes: [
                        { element: 'body', property: 'fontSize', value: '18px' },
                        { element: '.container', property: 'padding', value: '15px' }
                    ]
                };
            } else {
                return {
                    type: 'general_improvement',
                    changes: [
                        { element: 'body', property: 'fontFamily', value: 'Heebo, Arial, sans-serif' },
                        { element: 'h1', property: 'fontSize', value: '2.5rem' }
                    ]
                };
            }
        }

        async function applyAIChanges(aiResponse) {
            const frame = document.getElementById('websiteFrame');
            const frameDoc = frame.contentDocument || frame.contentWindow.document;
            
            aiResponse.changes.forEach(change => {
                const elements = frameDoc.querySelectorAll(change.element);
                elements.forEach(element => {
                    if (change.property === 'textContent') {
                        element.textContent = change.value;
                    } else {
                        element.style[change.property] = change.value;
                    }
                });
            });
            
            markAsModified();
            console.log('🤖 AI החיל שינויים:', aiResponse.changes.length);
        }

        function quickAction(action) {
            const actions = {
                'modernize': 'שנה את העיצוב להיות מודרני יותר עם צבעים עכשוויים וטיפוגרפיה נקייה',
                'seo': 'שפר את ה-SEO של הדף עם כותרות מותאמות ומטה תגים',
                'mobile': 'התאם את האתר לצפייה מושלמת בסלולר',
                'contact': 'הוסף כפתורי יצירת קשר ו-WhatsApp בולטים',
                'content': 'שפר את התוכן להיות יותר מקצועי ומעניין',
                'colors': 'שנה את פלטת הצבעים להיות יותר אטרקטיבית'
            };
            
            document.getElementById('aiInput').value = actions[action];
            executeAI();
        }

        // Device Switching
        function switchDevice(device) {
            const frame = document.getElementById('websiteFrame');
            const buttons = document.querySelectorAll('.device-btn');
            
            // Update buttons
            buttons.forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.device === device) {
                    btn.classList.add('active');
                }
            });
            
            // Update frame
            frame.className = `website-frame ${device}`;
            
            console.log(`📱 עבר למצב: ${device}`);
        }

        // Save Website
        function saveWebsite() {
            if (!currentWebsite) {
                showAlert('❌ אין אתר נבחר לשמירה', 'warning');
                return;
            }
            
            try {
                const frame = document.getElementById('websiteFrame');
                const frameDoc = frame.contentDocument || frame.contentWindow.document;
                const html = frameDoc.documentElement.outerHTML;
                
                // Save to localStorage
                const saveData = {
                    website: currentWebsite,
                    html: html,
                    timestamp: new Date().toISOString(),
                    version: Date.now()
                };
                
                localStorage.setItem(`webmaster_${currentWebsite}`, JSON.stringify(saveData));
                
                // Save to backend (if available)
                saveToBackend(saveData);
                
                showAlert('💾 האתר נשמר בהצלחה!', 'success');
                console.log('💾 שמירה הושלמה:', currentWebsite);
                
            } catch (error) {
                console.error('❌ שגיאת שמירה:', error);
                showAlert('❌ שגיאה בשמירת האתר', 'error');
            }
        }

        async function saveToBackend(data) {
            try {
                const response = await fetch(`${CONFIG.BACKEND_URL}/api/websites/${currentWebsite}/save`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    console.log('☁️ נשמר בענן בהצלחה');
                }
            } catch (error) {
                console.log('⚠️ לא ניתן לשמור בענן:', error.message);
            }
        }

        // Export Website
        function exportWebsite() {
            if (!currentWebsite) {
                showAlert('❌ אין אתר נבחר לייצוא', 'warning');
                return;
            }
            
            try {
                const frame = document.getElementById('websiteFrame');
                const frameDoc = frame.contentDocument || frame.contentWindow.document;
                const html = frameDoc.documentElement.outerHTML;
                
                const blob = new Blob([html], { type: 'text/html' });
                const url = URL.createObjectURL(blob);
                
                const a = document.createElement('a');
                a.href = url;
                a.download = `${currentWebsite}-edited.html`;
                a.click();
                
                URL.revokeObjectURL(url);
                
                showAlert('📁 האתר יוצא בהצלחה!', 'success');
                
            } catch (error) {
                console.error('❌ שגיאת ייצוא:', error);
                showAlert('❌ שגיאה בייצוא האתר', 'error');
            }
        }

        // Preview in New Tab
        function previewInNewTab() {
            if (!currentWebsite) {
                showAlert('❌ אין אתר נבחר לתצוגה', 'warning');
                return;
            }
            
            try {
                const frame = document.getElementById('websiteFrame');
                const frameDoc = frame.contentDocument || frame.contentWindow.document;
                const html = frameDoc.documentElement.outerHTML;
                
                const newWindow = window.open();
                newWindow.document.write(html);
                newWindow.document.close();
                
                showAlert('🌐 האתר נפתח בטאב חדש!', 'success');
                
            } catch (error) {
                console.error('❌ שגיאת תצוגה:', error);
                showAlert('❌ שגיאה בפתיחת תצוגה', 'error');
            }
        }

        // Reset Website
        function resetWebsite() {
            if (!currentWebsite) {
                showAlert('❌ אין אתר נבחר לאיפוס', 'warning');
                return;
            }
            
            if (confirm('האם אתה בטוח שברצונך לאפס את כל השינויים?')) {
                loadWebsite(currentWebsite);
                showAlert('🔄 האתר אופס לגרסה המקורית', 'success');
            }
        }

        // Upload Image
        function uploadImage() {
            const input = document.getElementById('imageUpload');
            const file = input.files[0];
            
            if (!file) return;
            
            if (!selectedElement || selectedElement.tagName !== 'IMG') {
                showAlert('❌ אנא בחר תמונה לעריכה', 'warning');
                return;
            }
            
            const reader = new FileReader();
            reader.onload = function(e) {
                selectedElement.src = e.target.result;
                showAlert('✅ תמונה הוחלפה בהצלחה!', 'success');
                markAsModified();
            };
            reader.readAsDataURL(file);
        }

        // Optimize Images
        function optimizeImages() {
            const frame = document.getElementById('websiteFrame');
            const frameDoc = frame.contentDocument || frame.contentWindow.document;
            const images = frameDoc.querySelectorAll('img');
            
            images.forEach(img => {
                // Add loading="lazy" for performance
                img.loading = 'lazy';
                
                // Add alt text if missing
                if (!img.alt) {
                    img.alt = 'תמונה';
                }
            });
            
            showAlert(`✅ ${images.length} תמונות אותאמו לביצועים!`, 'success');
            markAsModified();
        }

        // Auto Save
        function setupAutoSave() {
            autoSaveInterval = setInterval(() => {
                if (currentWebsite && selectedElement) {
                    saveWebsite();
                    console.log('💾 שמירה אוטומטית הושלמה');
                }
            }, 30000); // כל 30 שניות
        }

        // Mark as Modified
        function markAsModified() {
            const title = document.getElementById('previewTitle');
            if (!title.textContent.includes('*')) {
                title.innerHTML += ' <span style="color: #f59e0b;">*</span>';
            }
        }

        // Refresh Websites List
        function refreshWebsitesList() {
            loadWebsitesList();
            showAlert('🔄 רשימת האתרים רוענה!', 'success');
        }

        // Setup Iframe Listener
        function setupIframeListener() {
            window.addEventListener('message', function(event) {
                // Handle messages from iframe
                console.log('📨 הודעה מ-iframe:', event.data);
            });
        }

        // Utility Functions
        function rgbToHex(rgb) {
            if (!rgb || rgb === 'rgba(0, 0, 0, 0)') return '#000000';
            
            const match = rgb.match(/\d+/g);
            if (!match) return '#000000';
            
            const [r, g, b] = match;
            return '#' + [r, g, b].map(x => {
                const hex = parseInt(x).toString(16);
                return hex.length === 1 ? '0' + hex : hex;
            }).join('');
        }

        function showAlert(message, type = 'info') {
            const alertContainer = document.getElementById('alertContainer');
            
            const alert = document.createElement('div');
            alert.className = `alert ${type}`;
            alert.textContent = message;
            
            alertContainer.appendChild(alert);
            
            // Show alert
            setTimeout(() => alert.classList.add('show'), 100);
            
            // Hide alert after 3 seconds
            setTimeout(() => {
                alert.classList.remove('show');
                setTimeout(() => alertContainer.removeChild(alert), 300);
            }, 3000);
        }

        // Cleanup on page unload
        window.addEventListener('beforeunload', function() {
            if (autoSaveInterval) {
                clearInterval(autoSaveInterval);
            }
        });
    </script>
</body>
</html>
